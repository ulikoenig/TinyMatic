<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--DARK THEME-->
    <style name="HomeDroidDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/homedroid_primary</item>
        <item name="colorPrimaryDark">@color/homedroid_primary</item>
        <item name="colorAccent">@color/new_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/DarkAppearance</item>
    </style>

    <style name="DarkAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/new_blue</item>
        <item name="android:background">@color/dark_gray</item>
    </style>


    <!--LIGHT THEME-->
    <style name="HomeDroidLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/new_blue</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/new_blue</item>
    </style>

    <style name="UserVoiceTheme" parent="Theme.AppCompat.Light">
        <!-- theme customizations -->
    </style>
</resources>