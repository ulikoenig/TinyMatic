<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppStateRow" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1sp</item>
        <item name="android:layout_marginBottom">1sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppStateTitle" parent="@style/AppStateRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="device_textview">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="device_checkbox" parent="@style/device_textview">

    </style>

    <style name="device_imageview">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="widget_imageview" parent="@style/device_imageview">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="widget_imageview_big" parent="@style/device_imageview">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="SmallerTextButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="colorAccent">#875312</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>