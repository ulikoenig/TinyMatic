<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_grid_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_grid_selektor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/grid_item_padding"
        android:paddingRight="@dimen/grid_item_padding"
        android:paddingTop="@dimen/grid_item_padding">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/grid_item_image_size"
            android:layout_height="@dimen/grid_item_image_size"
            android:paddingBottom="@dimen/grid_item_image_padding"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="2"
            android:text=""
            android:textSize="@dimen/grid_item_text_size" />
    </LinearLayout>
</LinearLayout>